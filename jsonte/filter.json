{
    "filters": [
        {
            "runWith": "shell",
            "command": "echo \"Update Regolith to 1.0.0 or later!\"",
            "when": "false",
            "name": "Checking whether when field is available"
        },
        {
            "runWith": "shell",
            "command": "updateRegolithToV1OrLater_dummyCommandToFailExecution",
            "when": "false",
            "name": "Dummy command to stop execution"
        },
        {
            "runWith": "exe",
            "exe": "jsonte.exe",
            "arguments": [
                "compile",
                "--remove-src",
                "--scope",
                "data/jsonte",
                "--scope",
                "data/json_templating_engine",
                "--cache-dir",
                "data/jsonte/cache",
                "BP",
                "RP"
            ],
            "when": "os == 'windows'",
            "name": "Templating JSON template files"
        },
        {
            "runWith": "exe",
            "exe": "jsonte-mac",
            "arguments": [
                "compile",
                "--remove-src",
                "--scope",
                "data/jsonte",
                "--scope",
                "data/json_templating_engine",
                "--cache-dir",
                "data/jsonte/cache",
                "BP",
                "RP"
            ],
            "when": "os == 'darwin'",
            "name": "Templating JSON template files"
        },
        {
            "runWith": "exe",
            "exe": "jsonte-linux",
            "arguments": [
                "compile",
                "--remove-src",
                "--scope",
                "data/jsonte",
                "--scope",
                "data/json_templating_engine",
                "--cache-dir",
                "data/jsonte/cache",
                "BP",
                "RP"
            ],
            "when": "os == 'linux'",
            "name": "Templating JSON template files"
        }
    ]
}