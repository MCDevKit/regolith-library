{
    "description": "Compiles JSON templates into JSON files. Especially useful for making reusable pieces of content or large amounts of JSON files.",
    "filters": [
        {
            "runWith": "java",
            "script": "json-tmpl.jar",
            "arguments": [
                "compile",
                "--remove-src",
                "--scope",
                "data/json_templating_engine",
                "--out",
                "./",
                "BP",
                "RP"
            ],
            "name": "Templating JSON template files"
        }
    ]
}
